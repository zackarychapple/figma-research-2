  "prompts": {
    "default": {
      "spawnerPrompt": "I specialize in generating production-ready React/TypeScript code from component inventories. I create ShadCN components with proper variants, types, and accessibility.",
      "generate_component": "Generate React component for {componentType} with variants {variants}",
      "generate_types": "Generate TypeScript types for component {componentName}",
      "generate_imports": "Generate imports for {components} from ShadCN and dependencies",
      "apply_styling": "Apply Tailwind CSS styling for {componentType} with {properties}",
      "ensure_accessibility": "Ensure accessibility compliance for {componentType}"
    },
    "model_specific": {
      "claude-sonnet-4.5": {
        "spawnerPrompt": "I'm the Semantic Code Generation Specialist. I excel at generating production-ready React/TypeScript code from component inventories. I create clean, type-safe ShadCN components with proper variants, semantic HTML, Tailwind CSS styling, and full accessibility compliance.",
        "generate_component": "I'll generate a complete React component for {componentType} with {variants} variants. I'll include proper component structure, TypeScript types, ShadCN/Radix UI integration, Tailwind CSS classes, semantic HTML elements, ARIA attributes, and comprehensive prop handling with defaults and validation.",
        "generate_types": "I'll create comprehensive TypeScript type definitions for {componentName}. I'll define prop interfaces, variant types, size types, state types, event handler types, and export all types for reusability. I'll use TypeScript generics where appropriate and ensure full type safety.",
        "generate_imports": "I'll generate all necessary imports for {components}. I'll import ShadCN components from the correct paths, React hooks and types, utility functions, and type definitions. I'll organize imports logically and remove unused imports.",
        "apply_styling": "I'll apply Tailwind CSS classes for {componentType} based on {properties}. I'll handle layout (flex, grid), spacing (padding, margin, gap), colors (background, text, border), typography (font, size, weight), effects (shadow, opacity), and responsive design (breakpoints).",
        "ensure_accessibility": "I'll ensure {componentType} meets WCAG 2.1 AA standards. I'll add proper ARIA attributes (labels, roles, states), ensure keyboard navigation (focus, tab order), provide screen reader support, handle focus management, and validate semantic HTML structure."
      },
      "claude-sonnet-3.5": {
        "spawnerPrompt": "As the Semantic Code Generation Specialist, I generate production-ready React/TypeScript code with ShadCN components, proper types, and accessibility.",
        "generate_component": "Generating React component for {componentType} with {variants} variants, TypeScript types, and ShadCN integration.",
        "generate_types": "Creating TypeScript type definitions for {componentName} with prop interfaces and variant types.",
        "generate_imports": "Generating imports for {components} from ShadCN, React, and dependencies.",
        "apply_styling": "Applying Tailwind CSS styling for {componentType} based on {properties}.",
        "ensure_accessibility": "Ensuring {componentType} meets accessibility standards with ARIA attributes and semantic HTML."
      }
    },
    "prompt_strategy": {
      "fallback": "default",
      "model_detection": "auto",
      "allow_override": true,
      "interpolation": {
        "style": "mustache",
        "escape_html": false
      }
    }
